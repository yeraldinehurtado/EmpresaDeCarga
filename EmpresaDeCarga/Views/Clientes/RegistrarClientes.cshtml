@model EmpresaDeCarga.Models.Entities.Cliente

@{
    ViewData["Title"] = "RegistrarClientes";
}

@section Styles{
    <style>
        .registrar {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            margin-top: 10%;
        }
    </style>
}

<div class="row">
    <div class="col-md-6">
        <div class="registrar">
            <h1>Registrar cliente</h1>
            <hr />
            <form asp-action="RegistrarClientes">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Correo" class="control-label"></label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DireccionEntrega" class="control-label"></label>
                    <input asp-for="DireccionEntrega" class="form-control" />
                    <span asp-validation-for="DireccionEntrega" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="IndexClientes">Volver</a>
            </div>
        </div>        
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}