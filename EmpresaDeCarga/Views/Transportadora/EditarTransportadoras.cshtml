@model EmpresaDeCarga.Models.Entities.Transportadora

@{
    ViewData["Title"] = "EditarTransportadoras";
}

@section Styles{
    <style>
        .editar {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            text-align: center;
            margin-top: 10%;
        }
    </style>
}


<div class="m-0 row justify-content-center align-items-center">
    <div class="col-md-4">
        <div class="editar">
            <h1>Editar transportadora</h1>
            <hr />
            <form asp-action="EditarTransportadoras">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TransportadoraId" />
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="IndexTransportadoras">Volver</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
