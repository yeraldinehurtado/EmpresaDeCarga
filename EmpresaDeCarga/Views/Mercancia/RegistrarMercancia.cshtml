@model EmpresaDeCarga.Models.Entities.Mercancia

@{ ViewData["Title"] = "RegistrarMercancia"; }

@section Styles{
    <style>
        .registrar {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            margin-top: 10%;
        }
    </style>
}

<div class="row">
    <div class="col-md-6">
        <div class="registrar">
            <h1>Registrar mercancia</h1>
            <hr />
            <form asp-action="RegistrarMercancia">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TipoMercancia" class="control-label"></label>
                    <input asp-for="TipoMercancia" class="form-control" />
                    <span asp-validation-for="TipoMercancia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="IndexMercancia">Volver</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}